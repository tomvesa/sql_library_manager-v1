extends ../layout

block content
  div.subheader
    h2 Books
    a(href="/books/new", class="btn-new") Add New Book &#43;

  table  
    thead
      tr
       th Title
       th Author
       th Genre  
       th Year
    tbody
      each book in books
        tr
          td
            a(href="/books/" + book.id)= book.title
          td= book.author
          td= book.genre
          td= book.year